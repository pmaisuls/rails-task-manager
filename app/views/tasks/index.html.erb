<h1>My Tasks</h1>

<% @tasks.each do |task| %>
<% task_sym = task.completed ? "☑" : "☐" %>
<p><%= task_sym%><%= link_to task.title, task_path(task) %>
<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
      </p>
<% end %>




